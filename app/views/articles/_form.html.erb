<div class="container">
    <%= render 'shared/errors', obj: @article %>
    <div class="row justify-content-center text-center">
        <div class="col-10">
            <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-secondary rounded", local: true ) do |f| %>
                <div class="form-group row mb-2">
                    <%= f.label :title, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <%= f.label :description, class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
                    </div>                          
                </div>
                <div class="form-group row">
                    <%= f.label :category, class: "col-2 col-form-label" %>
                    <div class="col-6">
                        <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, size: 6, class: "custom-select shadow rounded ",:style => "width:600px" }) %>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <div class="col-10 my-2">
                        <%= f.submit class: "btn btn-outline-light btn-lg" %>
                    </div>
                </div>
            <% end %>
                <div class="text-center">
                    <%= link_to '[Cancel and return to articles listing]', articles_path, class: "text-dark" %>
                </div>
        </div>
    </div>
</div>
